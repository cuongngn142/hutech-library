<%- include('partials/header') %>

<div class="container mt-4">
    <h2 class="mb-4">Danh sách sách</h2>

    <!-- Search and filter form -->
    <form action="/sach" method="GET" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo tên sách hoặc tác giả" value="<%= typeof search !== 'undefined' ? search : '' %>">
            </div>
            <div class="col-md-3">
                <select name="category" class="form-select">
                    <option value="">Tất cả thể loại</option>
                    <% if (categories) { %>
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat.MaTheLoai %>" <%= selectedCategory == cat.MaTheLoai ? 'selected' : '' %>>
                                <%= cat.TenTheLoai %>
                            </option>
                        <% }) %>
                    <% } %>
                </select>
            </div>
            <div class="col-md-3">
                <select name="location" class="form-select">
                    <option value="">Tất cả vị trí</option>
                    <% if (locations) { %>
                        <% locations.forEach(loc => { %>
                            <option value="<%= loc.MaViTri %>" <%= selectedLocation == loc.MaViTri ? 'selected' : '' %>>
                                <%= loc.TenViTri %>
                            </option>
                        <% }) %>
                    <% } %>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
            </div>
        </div>
    </form>

    <!-- Book list -->
    <div class="row">
        <% if (books && books.length > 0) { %>
            <% books.forEach(book => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <% if (book.URLAnh) { %>
                            <img src="<%= book.URLAnh %>" class="card-img-top" alt="<%= book.TenSach %>">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= book.TenSach %></h5>
                            <p class="card-text">
                                <strong>Tác giả:</strong> <%= book.TacGia %><br>
                                <strong>Năm xuất bản:</strong> <%= book.NamXuatBan %><br>
                                <strong>Vị trí:</strong> <%= book.TenViTri %><br>
                                <strong>Số lượng tồn:</strong> <%= book.SoLuongTon %><br>
                                <% if (book.TheLoai) { %>
                                    <strong>Thể loại:</strong> <%= book.TheLoai %><br>
                                <% } %>
                            </p>
                            <% if (book.FilePDF) { %>
                                <a href="<%= book.FilePDF %>" class="btn btn-info btn-sm mb-2" target="_blank">
                                    <i class="fas fa-file-pdf"></i> Xem PDF
                                </a>
                            <% } %>
                            <% if (user) { %>
                                <button class="btn btn-primary add-to-cart" 
                                        data-book-id="<%= book.MaSach %>"
                                        data-book-name="<%= book.TenSach %>">
                                    Thêm vào giỏ
                                </button>
                            <% } else { %>
                                <a href="/user/login" class="btn btn-primary">Đăng nhập để mượn</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info">
                    Không tìm thấy sách nào phù hợp với tiêu chí tìm kiếm.
                </div>
            </div>
        <% } %>
    </div>

    <!-- Pagination -->
    <% if (totalPages > 1) { %>
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link" href="/sach?page=<%= i %><%= search ? '&search=' + search : '' %><%= selectedCategory ? '&category=' + selectedCategory : '' %><%= selectedLocation ? '&location=' + selectedLocation : '' %>">
                            <%= i %>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</div>

<!-- Add to cart modal -->
<div class="modal fade" id="addToCartModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm sách vào giỏ</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn đang thêm sách: <span id="bookName"></span></p>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Số lượng</label>
                    <input type="number" class="form-control" id="quantity" min="1" value="1">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="confirmAdd">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const modal = new bootstrap.Modal(document.getElementById('addToCartModal'));
    let currentBookId = null;

    // Handle add to cart button click
    document.querySelectorAll('.add-to-cart').forEach(button => {
        button.addEventListener('click', function() {
            currentBookId = this.dataset.bookId;
            document.getElementById('bookName').textContent = this.dataset.bookName;
            modal.show();
        });
    });

    // Handle confirm add button click
    document.getElementById('confirmAdd').addEventListener('click', async function() {
        const quantity = document.getElementById('quantity').value;
        
        try {
            const response = await fetch('/sach/cart/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    bookId: currentBookId,
                    quantity: parseInt(quantity)
                })
            });

            const data = await response.json();
            
            if (data.success) {
                alert(data.message);
                modal.hide();
            } else {
                alert(data.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Có lỗi xảy ra khi thêm sách vào giỏ.');
        }
    });
});
</script>

<%- include('partials/footer') %> 