<%- include('../partials/header') %>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-4">
                <h1 class="h2">Dashboard</h1>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h5 class="card-title">Tổng số sách</h5>
                            <p class="card-text display-6"><%= stats.totalBooks %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <h5 class="card-title">Sách đang mượn</h5>
                            <p class="card-text display-6"><%= stats.borrowedBooks %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <h5 class="card-title">Phiếu phạt chưa đóng</h5>
                            <p class="card-text display-6"><%= stats.unpaidFines %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <h5 class="card-title">Tổng số sinh viên</h5>
                            <p class="card-text display-6"><%= stats.totalStudents %></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activities -->
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Phiếu mượn gần đây</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sinh viên</th>
                                            <th>Sách</th>
                                            <th>Ngày mượn</th>
                                            <th>Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% recentBorrows.forEach(borrow => { %>
                                            <tr>
                                                <td><%= borrow.HoTen %></td>
                                                <td><%= borrow.TenSach %></td>
                                                <td><%= new Date(borrow.NgayMuon).toLocaleDateString('vi-VN') %></td>
                                                <td>
                                                    <span class="badge <%= borrow.TrangThai === 'Đã trả' ? 'bg-success' : 
                                                        (borrow.TrangThai === 'Quá hạn' ? 'bg-danger' : 'bg-warning') %>">
                                                        <%= borrow.TrangThai %>
                                                    </span>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Phiếu phạt gần đây</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Sinh viên</th>
                                            <th>Sách</th>
                                            <th>Số tiền</th>
                                            <th>Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% recentFines.forEach(fine => { %>
                                            <tr>
                                                <td><%= fine.HoTen %></td>
                                                <td><%= fine.TenSach %></td>
                                                <td><%= fine.SoTienPhat.toLocaleString('vi-VN') %>đ</td>
                                                <td>
                                                    <span class="badge <%= fine.TrangThai === 'Đã đóng phạt' ? 'bg-success' : 'bg-danger' %>">
                                                        <%= fine.TrangThai %>
                                                    </span>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 