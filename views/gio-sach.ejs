<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HUTECH Library - Giỏ Sách</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        /* Navbar Styles */
        .navbar {
            background: linear-gradient(45deg, #2c3e50, #3498db);
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: white;
        }

        .logo {
            display: flex;
            align-items: center;
        }

        .logo h1 {
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo h1 img {
            width: 60px;
            height: 60px;
        }

        .nav-links {
            display: flex;
            list-style: none;
        }

        .nav-links li {
            margin-left: 2rem;
            display: flex;
            align-items: center;
            position: relative;
        }

        .nav-links li a {
            display: flex;
            align-items: center;
            height: 100%;
            padding: 0.5rem 0;
            text-decoration: none;
            color: white;
        }

        .nav-links li img {
            filter: invert(100%);
            object-fit: contain;
            width: 32px;
            height: 32px;
        }

        .nav-links a:hover {
            color: #f1c40f;
            transform: scale(1.1);
        }

        .nav-links a:hover img {
            filter: invert(80%) sepia(100%) saturate(300%);
            transform: scale(1.1);
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            min-width: 200px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
            border-radius: 5px;
            z-index: 1000;
            background-color: #3498db;
            border: 1px solid #e0e0e0;
            padding-right: 40px;
            padding-bottom: 10px;
        }

        .dropdown-menu li {
            padding: 0;
            list-style: none;
        }

        .dropdown-menu a {
            color: #2c3e50;
            display: block;
            padding: 10px 15px;
            text-decoration: none;
            font-size: 0.95rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            transition: background-color 0.3s, color 0.3s;
        }

        .dropdown:hover .dropdown-menu {
            display: block;
        }

        /* Shopping Cart Styles */
        .shopping-cart {
            padding: 2rem;
            background-color: #f5f6fa;
            min-height: 80vh;
        }

        .cart-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .cart-container h2 {
            color: #2c3e50;
            margin-bottom: 2rem;
            text-align: center;
        }

        .cart-items {
            background: white;
            border-radius: 8px;
            padding: 1rem;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .cart-item {
            display: flex;
            align-items: center;
            padding: 1rem;
            border-bottom: 1px solid #e0e0e0;
        }

        .cart-item:last-child {
            border-bottom: none;
        }

        .cart-item img {
            width: 80px;
            height: 120px;
            object-fit: cover;
            margin-right: 1rem;
            border-radius: 4px;
        }

        .cart-item-details {
            flex: 1;
        }

        .cart-item-details h3 {
            color: #2c3e50;
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
        }

        .cart-item-details p {
            color: #666;
            margin-bottom: 0.3rem;
        }

        .remove-btn {
            background: #e74c3c;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .remove-btn:hover {
            background: #c0392b;
        }

        .cart-summary {
            margin-top: 2rem;
            background: white;
            padding: 1.5rem;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            text-align: right;
        }

        .cart-summary h3 {
            color: #2c3e50;
            margin-bottom: 1rem;
        }

        .cart-summary p {
            margin-bottom: 0.5rem;
            color: #666;
        }

        .total-quantity {
            color: #3498db;
            font-weight: bold;
        }

        .borrow-btn {
            background: linear-gradient(45deg, #2c3e50, #3498db);
            color: white;
            border: none;
            padding: 0.8rem 2rem;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1.1rem;
            margin-top: 1rem;
            transition: transform 0.3s;
        }

        .borrow-btn:hover {
            transform: scale(1.05);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .nav-links {
                display: none;
            }
            
            .cart-item {
                flex-direction: column;
                text-align: center;
            }
            
            .cart-item img {
                margin: 0 0 1rem 0;
            }
            
            .cart-summary {
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <h1 class="mb-4">Giỏ sách</h1>

        <% if (cartItems && cartItems.length > 0) { %>
            <div class="row">
                <div class="col-md-8">
                    <!-- Cart items -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <% cartItems.forEach(item => { %>
                                <div class="row mb-3 cart-item" data-book-id="<%= item.MaSach %>">
                                    <div class="col-md-8">
                                        <h5 class="card-title"><%= item.TenSach %></h5>
                                        <p class="card-text">
                                            <strong>Tác giả:</strong> <%= item.TacGia %><br>
                                            <strong>Số lượng trong kho:</strong> <%= item.SoLuongTon %>
                                        </p>
                                    </div>
                                    <div class="col-md-4 text-end">
                                        <div class="input-group mb-2">
                                            <button class="btn btn-outline-secondary update-quantity" type="button" data-action="decrease">-</button>
                                            <input type="number" class="form-control text-center quantity-input" value="<%= item.SoLuong %>" min="1" max="<%= item.SoLuongTon %>">
                                            <button class="btn btn-outline-secondary update-quantity" type="button" data-action="increase">+</button>
                                        </div>
                                        <button class="btn btn-danger btn-sm remove-item">Xóa</button>
                                    </div>
                                </div>
                                <% if (!cartItems[cartItems.length - 1].MaSach === item.MaSach) { %>
                                    <hr>
                                <% } %>
                            <% }) %>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- Cart summary -->
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Tổng quan</h5>
                            <p class="card-text">
                                <strong>Tổng số sách:</strong> <%= cartItems.reduce((sum, item) => sum + item.SoLuong, 0) %><br>
                                <strong>Số loại sách:</strong> <%= cartItems.length %>
                            </p>
                            <button class="btn btn-primary w-100" id="checkoutBtn">Tiến hành mượn</button>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                Giỏ sách của bạn đang trống. 
                <a href="/sach" class="alert-link">Xem danh sách sách</a> để thêm sách vào giỏ.
            </div>
        <% } %>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Handle quantity updates
        document.querySelectorAll('.update-quantity').forEach(button => {
            button.addEventListener('click', async function() {
                const cartItem = this.closest('.cart-item');
                const bookId = cartItem.dataset.bookId;
                const input = cartItem.querySelector('.quantity-input');
                const currentValue = parseInt(input.value);
                const maxValue = parseInt(input.max);
                const action = this.dataset.action;

                let newValue = currentValue;
                if (action === 'increase' && currentValue < maxValue) {
                    newValue = currentValue + 1;
                } else if (action === 'decrease' && currentValue > 1) {
                    newValue = currentValue - 1;
                }

                if (newValue !== currentValue) {
                    try {
                        const response = await fetch(`/sach/gio-sach/${bookId}/quantity`, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ quantity: newValue })
                        });

                        const data = await response.json();
                        
                        if (data.success) {
                            input.value = newValue;
                        } else {
                            alert(data.message);
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        alert('Có lỗi xảy ra khi cập nhật số lượng.');
                    }
                }
            });
        });

        // Handle quantity input changes
        document.querySelectorAll('.quantity-input').forEach(input => {
            input.addEventListener('change', async function() {
                const cartItem = this.closest('.cart-item');
                const bookId = cartItem.dataset.bookId;
                const newValue = parseInt(this.value);
                const maxValue = parseInt(this.max);

                if (newValue < 1) {
                    this.value = 1;
                    return;
                }

                if (newValue > maxValue) {
                    this.value = maxValue;
                    return;
                }

                try {
                    const response = await fetch(`/sach/gio-sach/${bookId}/quantity`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ quantity: newValue })
                    });

                    const data = await response.json();
                    
                    if (!data.success) {
                        alert(data.message);
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi cập nhật số lượng.');
                }
            });
        });

        // Handle item removal
        document.querySelectorAll('.remove-item').forEach(button => {
            button.addEventListener('click', async function() {
                if (!confirm('Bạn có chắc chắn muốn xóa sách này khỏi giỏ?')) {
                    return;
                }

                const cartItem = this.closest('.cart-item');
                const bookId = cartItem.dataset.bookId;

                try {
                    const response = await fetch(`/sach/gio-sach/${bookId}`, {
                        method: 'DELETE'
                    });

                    const data = await response.json();
                    
                    if (data.success) {
                        cartItem.remove();
                        if (document.querySelectorAll('.cart-item').length === 0) {
                            location.reload();
                        }
                    } else {
                        alert(data.message);
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi xóa sách khỏi giỏ.');
                }
            });
        });

        // Handle checkout
        document.getElementById('checkoutBtn')?.addEventListener('click', function() {
            // TODO: Implement checkout functionality
            alert('Chức năng tiến hành mượn sách đang được phát triển.');
        });
    });
    </script>

    <%- include('partials/footer') %>
</body>
</html>